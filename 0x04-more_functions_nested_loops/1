#include "main.h"

/**
 *  print_triangle - prints a triangle
 *  followed by a new line
 *  @size: input parameter
 *
 *  Return: void
 */

void print_triangle(int size)
{
	int x, y;

	if (size > 0)
	{
		for (x = size; x > 0; x--)
		{
			for (y = size; y > 0; y--)
			{
				_putchar(35);
			}
			_putchar(92);
			_putchar('\n');
		}
	}
	else
	{
		_putchar('\n');
	}
}
